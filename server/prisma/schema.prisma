generator client {
  provider = "cargo prisma"
  output   = "../src/prisma.rs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Friends {
  id           String       @id
  user_id      String
  friend_id    String
  status       FriendStatus @default(PENDING)
  submitted_at DateTime     @default(now())
}

model Users {
  id       String @id
  username String @unique
  email    String @unique
  password String
}

enum FriendStatus {
  PENDING
  ACCEPTED
  BLOCKED
}
